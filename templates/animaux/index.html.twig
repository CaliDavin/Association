                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            {% for animal in animaux %}
                <tr>
                    <th scope="row">{{animal.name}}</th>
                    <td>{{animal.type}}</td>
                    <td>{{animal.genre}}</td>
                    <td>{{animal.age}}</td>
